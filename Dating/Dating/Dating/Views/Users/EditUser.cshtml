@model Dating.Models.UsersModels
@{
    ViewData["Title"] = "Chỉnh Sửa Thông Tin Người Dùng";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(135deg, #ef2a54, #FF3A5C);
            font-family: Arial, sans-serif;
        }

        .edit-container {
            width: 500px;
            margin: 100px auto;
            padding: 15px;
            background-color: #333;
            border-radius: 8px;
            color: white;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
            font-size: 16px;
            margin-top: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 4px;
            border: none;
            margin-top: 5px;
        }

        .btn-primary {
            background-color: #ff0066;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 20px;
        }

        .btn-secondary {
            width: 100%;
            margin-top: 10px;
            background-color: #6c757d;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .text-danger {
            color: #ff0000;
        }
    </style>
</head>
<body>
    <div class="edit-container">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="EditUser" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="user_id" />

            <div class="form-group">
                <input asp-for="username" class="form-control" placeholder="Tên người dùng" required />
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="sdt" class="form-control" placeholder="Số điện thoại" required />
                <span asp-validation-for="sdt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="gender" class="form-control" required>
                    <option value="male">Nam</option>
                    <option value="female">Nữ</option>
                    <option value="other">Khác</option>
                </select>
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="date_of_birth" type="date" class="form-control" required />
                <span asp-validation-for="date_of_birth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="bio" class="form-control" placeholder="Tiểu sử" required></textarea>
                <span asp-validation-for="bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ProfileImage" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="location" class="form-control" placeholder="Location (Địa chỉ)" required />
                <span asp-validation-for="location" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="password" value="@Model.password" />
            <input type="hidden" asp-for="email" value="@Model.email" />
            <input type="hidden" asp-for="iUsersRoleID" value="@Model.iUsersRoleID" />
            <input type="hidden" asp-for="latitude" value="@Model.latitude" />
            <input type="hidden" asp-for="longitude" value="@Model.longitude" /> 
            <input type="hidden" asp-for="IsActive" value="@Model.IsActive" /> 

            <button type="submit" class="btn-primary">Cập nhật</button>
        </form>
        @* <a asp-action="EditProfile" asp-route-id="@Model.user_id" class="btn-secondary">Chỉnh sửa hồ sơ</a> *@
        <button type="button" class="btn-secondary" onclick="location.href='@Url.Action("EditProfile", new { id = Model.user_id })'">Chỉnh sửa hồ sơ</button>

    </div>
</body>
</html>
