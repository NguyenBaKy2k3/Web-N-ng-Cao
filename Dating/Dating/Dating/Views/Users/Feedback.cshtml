    <title>Phản hồi</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #ef2a54, #FF3A5C);
            font-family: Arial, sans-serif;
        }

        .feedback-container {
            width: 400px;
            margin: 100px auto;
            padding: 30px;
            background-color: #333;
            border-radius: 8px;
            color: white;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
            font-size: 16px;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
            }

        .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 4px;
            border: none;
            margin-top: 5px;
            resize: none;
        }

        textarea.form-control {
            height: 100px;
        }

        .btn-primary {
            background-color: #ff0066;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #ff3366;
            }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        #successMessage {
            position: fixed;
            right: -300px;
            top: 20px;
            width: 300px;
            padding: 15px;
