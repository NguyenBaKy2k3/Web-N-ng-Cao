@model IEnumerable<UserProfileViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh Sách Hồ Sơ Chưa Duyệt</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa; 
        }

        .table {
            background-color: #fff; 
            border-radius: 0.5rem; 
            overflow: hidden; 
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); 
            margin-top: 20px; 
        }

        th {
            background-color: #007bff; 
            color: black; 
        }

        th, td {
            padding: 1rem;
            text-align: center; 
        }

        .btn-success {
            background-color: #28a745;
            color: white; 
        }

            .btn-success:hover {
                background-color: #218838; 
            }

        .table-fixed {
            position: fixed; 
            top: 70px; 
            left: 0;
            right: 0;
            bottom: 0;
            overflow-y: auto; 
            z-index: 10;
        }

        .table-container {
            overflow-x: auto;
            margin-top: 20px;
            margin-bottom: 20px;
            border-radius: 0.5rem;
            overflow-y: auto;
            max-height: 500px;
        }

        @@media (max-width: 768px) {
            th, td {
                font-size: 12px; 
                padding: 0.5rem; 
            }
        }
        .title-box {
            background-color: white;
            color: black;
            padding: 10px 20px;
            display: inline-block;
            font-size: 1.5rem;
            font-weight: bold;
            border-radius: 0.5rem;
        }

    </style>
</head>
<body>

    <div class="container mt-5 table-fixed text-center">
        <h2 class="title-box">Danh Sách Hồ Sơ Chưa Duyệt</h2>
        <div class="table-container">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Ảnh đại diện</th>
                        <th>Tên người dùng</th>
                        <th>Giới tính</th>
                        <th>Nghề nghiệp</th>
                        <th>Mối quan hệ</th>
                        <th>Mục tiêu tìm kiếm</th>
                        <th>Sở thích</th>
                        <th>Chiều cao</th>
                        <th>Cân nặng</th>
                        <th>Tiểu sử</th>
                        <th>Tuổi</th>
                        <th>Quê quán</th>
                        <th>Phê duyệt</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var profile in Model)
                    {
                        <tr>
                            <td>
                                <img src="@profile.ProfilePicture" alt="Ảnh đại diện" style="width:50px; height:50px; border-radius:50%;" />
                            </td>
                            <td>@profile.Username</td>
                            <td>@profile.Gender</td>
                            <td>@profile.Occupation</td>
                            <td>@profile.RelationshipStatus</td>
                            <td>@profile.LookingFor</td>
                            <td>@profile.Hobbies</td>
                            <td>@profile.Height</td>
                            <td>@profile.Weight</td>
                            <td>@profile.Bio</td>
                            <td>@profile.Age</td>
                            <td>@profile.Location</td>
                            <td>
                                <a asp-action="Approve" asp-route-id="@profile.ProfileId" class="btn btn-success">Duyệt</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
