@model Dating.Models.UserProfile

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" id="successMessage">
        @TempData["Message"]
    </div>
}
<!-- Form để người dùng nhập thông tin hồ sơ -->
<form asp-action="CreateProfile" method="post">
    <div class="form-group">
        <label asp-for="occupation">Nghề nghiệp</label>
        <input asp-for="occupation" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="relationship_status">Tình trạng mối quan hệ</label>
        <select asp-for="relationship_status" class="form-control">
            <option value="">-- Chọn tình trạng mối quan hệ --</option>
            <option value="Độc thân">Độc thân</option>
            <option value="Đang trong mối quan hệ">Đang trong mối quan hệ</option>
            <option value="Đã kết hôn">Đã kết hôn</option>
            <option value="Phức tạp">Phức tạp</option>
        </select>
        <span asp-validation-for="relationship_status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="gender_looking">Giới tính muốn tìm kiếm</label>
        <select asp-for="gender_looking" class="form-control">
            <option value="">-- Chọn giới tính muốn tìm kiếm --</option>
            <option value="Nam">Nam</option>
            <option value="Nữ">Nữ</option>
            <option value="Khác">Khác</option>
        </select>
        <span asp-validation-for="relationship_status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="looking_for">Mục tiêu tìm kiếm</label>
        <input asp-for="looking_for" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="hobbies">Sở thích</label>
        <input asp-for="hobbies" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="height">Chiều cao</label>
        <input asp-for="height" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="weight">Cân nặng</label>
        <input asp-for="weight" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Gửi</button> <!-- Nút gửi thông tin -->
</form>


<style>
    body {
        background: linear-gradient(135deg, #ef2a54, #FF3A5C);
        font-family: Arial, sans-serif;
    }

    .edit-container {
        width: 400px; 
        margin: 50px auto; 
        padding: 10px;
        background-color: #333;
        border-radius: 8px;
        color: white;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
        font-size: 16px;
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 8px; 
    }

    .form-control {
        width: 100%;
        padding: 8px; 
        border-radius: 4px;
        border: none;
        margin-top: 5px;
    }

    .btn-primary {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 8px;
        width: 100%;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 15px; 
    }

    .text-danger {
        color: #ff0000;
    }

    label {
        font-weight: bold;
    }

    #successMessage {
        position: fixed;
        right: -300px;
        top: 20px;
        width: 300px;
        padding: 15px;
        background-color: #000;
        color: white;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        transition: right 0.5s ease;
        margin-top: 100px;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var successMessage = document.getElementById('successMessage');

        if (successMessage) {
            successMessage.style.right = '20px';

            setTimeout(function () {
                successMessage.style.right = '-300px';
            }, 3000);
        }
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
