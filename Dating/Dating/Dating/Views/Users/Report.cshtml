@model IEnumerable<dynamic>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Báo Cáo Vi Phạm</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .table {
            background-color: #fff;
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        th {
            background-color: #007bff;
            color: black; 
        }

        th, td {
            padding: 1rem;
            text-align: center;
        }

        .btn-process {
            margin: 1rem 0;
            background-color: #28a745;
            color: white;
        }

        .btn-process:hover {
            background-color: #218838;
        }
        
        .table-fixed {
            position: fixed;
            top: 70px; 
            left: 0;
            right: 0;
            bottom: 0;
            overflow-y: auto; 
            z-index: 10; 
        }

        .table-container {
            overflow-x: auto;
            margin-top: 20px; 
            margin-bottom: 20px; 
            border-radius: 0.5rem; 
            overflow-y: auto;
            max-height: 400px;
        }

        @@media (max-width: 768px) {
            th, td {
                font-size: 12px; 
                padding: 0.5rem;
            }
        }
    </style>
</head>
<body>

    <div class="container mt-5 table-fixed">
        <h2 class="text-center">Danh Sách Báo Cáo Vi Phạm</h2>
        <div class ="table-container">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Người Bị Báo Cáo</th>
                        <th>Số Lần Bị Báo Cáo</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model)
                    {
                        <tr>
                            <td>@report.ReportedUserName</td> 
                            <td>@report.ReportCount</td> 
                            <td>
                                <form action="@Url.Action("ProcessReports", "Admin")" method="post">
                                    <input type="hidden" name="reportedUserId" value="@report.ReportedUserId" />
                                    <button type="submit" class="btn btn-warning">
                                        Xử Lý
                                    </button>
                                </form>
                            </td> 
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
