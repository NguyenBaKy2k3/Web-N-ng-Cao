@{
    ViewData["Title"] = "Mã Xác Thực";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(135deg, #ef2a54, #FF3A5C);
            font-family: Arial, sans-serif;
        }

        .login-container {
            width: 400px;
            margin: 100px auto;
            padding: 30px;
            background-color: #333;
            border-radius: 8px;
            color: white;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
            font-size: 16px;
            z-index: 1;
            position: relative;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 4px;
            border: none;
            margin-top: 5px;
        }

        .btn-primary {
            background-color: #ff0066;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 4px;
            cursor: pointer;
        }

        .alert {
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 4px;
            text-align: center;
        }

        .alert-danger {
            background-color: #ff0000;
            color: white;
        }

        .alert-success {
            background-color: #4CAF50;
            color: white;
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2;
        }

        .alert-success {
        background-color: #000000; /* Nền đen */
        color: white; /* Chữ trắng */
        }

    </style>
</head>
<body>
    <div class="login-container">
        <h1>@ViewData["Title"]</h1>

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="overlay">
                <div class="alert alert-success">@ViewBag.SuccessMessage</div>
            </div>
            <script>
                setTimeout(function () {
                    window.location.href = '@Url.Action("Userlist", "Users")';
                }, 2000); // Chờ 2 giây trước khi chuyển hướng
            </script>
        }
        else if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <form asp-action="VerifyCode" method="post">
            <div class="form-group">
                <label for="enteredCode">Mã xác nhận:</label>
                <input type="text" class="form-control" id="enteredCode" name="enteredCode" required />
            </div>
            <button type="submit" class="btn-primary">Xác thực</button>
        </form>
    </div>

    <!-- Đảm bảo rằng bạn đã thêm các script cần thiết cho jQuery Validation -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
